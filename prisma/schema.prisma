
generator client {
  provider = "prisma-client"
  output   = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Actor {
  id String @id @default(uuid()) @db.Uuid
  author String?
  createdAt String
  updatedAt String
}

model OutboxEvent {
  id            String   @id @default(cuid())
  topic         String
  payload       Json
  createdAt     DateTime @default(now())
  processedAt   DateTime?
  attempts      Int      @default(0)
  nextAttemptAt DateTime @default(now())
  lastError     String?
  lockedAt      DateTime?
  lockedBy      String?

  @@index([processedAt, nextAttemptAt])
  @@index([lockedAt])
}
